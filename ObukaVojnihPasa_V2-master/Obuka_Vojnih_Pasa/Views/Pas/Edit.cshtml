@model Obuka_Vojnih_Pasa.Models.Domain.Pas
@using Obuka_Vojnih_Pasa.Models.Domain
@{
    ViewData["Title"] = "Edit";

}


<div class="edit">
    <div class="container">
        <div class="row main">
            <div class="main-login main-center">
                <h5>Izmena podataka o psu</h5>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Angazovanja" />
                    <div class="form-group">
                        <label class="cols-sm-2 control-label">Broj zdravstvene knjižice</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-notes-medical fa" aria-hidden="true"></i></span>
                                <input asp-for="BrojZdravstveneKnjizice" class="form-control" />

                            </div>
                            <span asp-validation-for="BrojZdravstveneKnjizice" class="zadatak_invalid"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="cols-sm-2 control-label">Ime psa</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-dog fa" aria-hidden="true"></i></span>
                                <input asp-for="Ime" class="form-control" />
                            </div>
                            <span asp-validation-for="Ime" class="zadatak_invalid"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="cols-sm-2 control-label">Rasa</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-bone fa" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(model => model.Rasa, new { @class = "form-control", @readonly = "readonly" })

                            </div>
                            <span asp-validation-for="Rasa" class="zadatak_invalid"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="cols-sm-2 control-label">Pol</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-venus-mars fa" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(model => model.Pol, new { @class = "form-control", @readonly = "readonly" })

                            </div>
                            <span asp-validation-for="Pol" class="zadatak_invalid"></span>

                        </div>
                    </div>



                    <div class="form-group">
                        <label class="cols-sm-2 control-label">Datum rođenja</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-calendar-alt fa" aria-hidden="true"></i></span>
                                <input asp-for="DatumRodjenja" type="date" class="form-control" />
                            </div>
                            <span asp-validation-for="DatumRodjenja" class="zadatak_invalid"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="cols-sm-2 control-label">Obuka</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-basketball-ball fa" aria-hidden="true"></i></span>
                                <select asp-for="ObukaId" class="form-control" asp-items="ViewBag.ObukaId"></select>

                            </div>
                            <span asp-validation-for="ObukaId" class="zadatak_invalid"></span>

                        </div>
                    </div>



                    <div class="form-group" style="padding-top:10px">

                        <input type="submit" class="btn-submit" value=" Sačuvaj promene " />
                        <input asp-action="Search" class="btn-submit" type="submit" value="Otkaži" style="margin-left: 20px; width: 140px" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>