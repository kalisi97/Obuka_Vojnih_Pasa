@model Obuka_Vojnih_Pasa.ViewModels.RegistrationViewModel

@{
    ViewBag.Title = "Registracija instruktora";
}





<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<!DOCTYPE html>
<html>

<head>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

</head>


<body>



    <div class="container h-100" style="font-size: 1.2rem">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card" style="margin-top:50px; height:500px">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSIn8fMeja5iEL8teQN5ZoSZZM9EVRFhYEO7u1oKgnq6AJOzu7H" class="brand_logo" alt="Logo">
                    </div>
                </div>
                <div class="d-flex justify-content-center form_container">
                    <form method="post">



                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>

                            <input asp-for="Email" type="email" class="form-control" style="font-size:1.2rem; height:34px" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>



                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>

                            <input asp-for="Username" class="form-control" style="font-size:1.2rem; height:34px" placeholder="Korisničko ime" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="Password" class="form-control" style="font-size:1.2rem; height:34px" placeholder="Lozinka" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>


                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="ConfirmPassword" class="form-control" style="font-size:1.2rem; height:34px" placeholder="Potvrdi lozinku" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>


                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-address-card"></i></span>
                            </div>

                            <input asp-for="ImePrezime" class="form-control" style="font-size:1.2rem; height:34px" placeholder="Ime i prezime" />
                            <span asp-validation-for="ImePrezime" class="text-danger"></span>
                        </div>


                        <div class="input-group mb-3">

                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-user-shield"></i></span>
                            </div>
                            <select asp-for="Cin" class="form-control" asp-items="ViewBag.Cinovi" style="font-size:1.2rem; height:34px; width:200px"></select>

                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-book"></i></span>
                            </div>

                            <select asp-for="ObukaId" class="form-control" asp-items="ViewBag.ObukaId" style="font-size:1.2rem; height:34px; width:200px"></select>


                        </div>


                        <div class="mt-lg-4">

                            <div class="d-flex justify-content-center  login_container">
                                <input type="submit" value="Registruj instruktora" class="login_btn" style="font-size:1.5rem" />

                            </div>
                        </div>

                    </form>
                </div>


            </div>
        </div>
    </div>

</body>
</html>