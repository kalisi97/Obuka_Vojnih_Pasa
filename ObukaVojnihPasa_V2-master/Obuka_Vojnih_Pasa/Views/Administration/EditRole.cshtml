@model Obuka_Vojnih_Pasa.ViewModels.EditRoleViewModel




<div class="container fadeInDown" style="padding: 40px;">
   


        <form method="post" style="padding-top: 30px">
            <div class="form-group row">

                <div class="col-sm-10">
                    <input type="hidden" asp-for="Id" disabled class="form-control">
                </div>
            </div>

            <div class="form-row">

                <div class="form-group col-1">
                    <label style="padding-top:5px; font-size:1.5rem">Naziv uloge</label>
                </div>
                <div class="form-group col-md-3">
                    <input asp-for="RoleName" class="form-control" style="width:100px">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4 ml-4">

                    <button type="submit" class="btn btn-primary btn_admin">Sačuvaj</button>
                    <a asp-action="GetAllRoles" class="btn btn-primary btn_admin ml-1">Otkaži</a>

                </div>

            </div>
       





        <div asp-validation-summary="All" class="text-danger"></div>


        <div class="carda">
            <div class="card-header">

             
                    <label style="font-size:1.5rem">Korisnici kojima je dodeljena ova uloga</label>
     
                    <a asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" title="Dodaj ili ukloni korisnike" style="width:auto"><img src="https://img.icons8.com/nolan/64/nui2.png" /></a>
              

            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">Trenutno ne postoji korisnik kome je dodeljena ova uloga</h5>
                }
            </div>

        </div>
    </form>
    </div>
    <link href="~/content/site.css" rel="stylesheet" />
